{
    "name": "casamento/presentes",
    "description": "Sistema de lista de presentes para casamento",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Desenvolvedor",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "piggly/php-pix": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Casamento\\": "src/"
        },
        "files": [
            "helpers/functions.php",
            "functions/gifts.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Casamento\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t ."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
